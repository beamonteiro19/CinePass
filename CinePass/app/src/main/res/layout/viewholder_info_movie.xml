<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textInfoTypeMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/info_movie_background"
                android:fontFamily="@font/lexend_deca"
                android:padding="8dp"
                android:text="2D"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textInfoAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/info_movie_background"
                android:fontFamily="@font/lexend_deca"
                android:padding="8dp"
                android:text="Dublado"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textInfoTypeMovie"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textMovieSchedule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/time_movie_background"
                android:fontFamily="@font/lexend_deca"
                android:onClick="onScheduleClick"
                android:padding="8dp"
                android:text="Hora"
                android:textColor="@color/time_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInfoTypeMovie" />

            <TextView
                android:id="@+id/textMovieSchedule2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/time_movie_background"
                android:fontFamily="@font/lexend_deca"
                android:onClick="onScheduleClick"
                android:padding="8dp"
                android:text="Hora"
                android:textColor="@color/time_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textMovieSchedule1"
                app:layout_constraintTop_toBottomOf="@+id/textInfoTypeMovie" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</RelativeLayout>
